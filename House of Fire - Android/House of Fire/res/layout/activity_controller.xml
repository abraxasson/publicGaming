<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_game" >

    <TextView
        android:id="@+id/output_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="#cfff"
        android:padding="12dp"
        android:text="Spielername"
        android:textColor="#000"
        android:textSize="@dimen/padding_mega"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/pfeil_links"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_game"
            android:scaleType="fitCenter"
            android:src="@drawable/pfeil_links" />

        <house.of.fire.VerticalProgressBar
            android:id="@+id/water_rating"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/water_level_progress" />

        <ImageButton
            android:id="@+id/pfeil_rechts"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_game"
            android:scaleType="fitCenter"
            android:src="@drawable/pfeil_rechts" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_pump"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:background="@drawable/btn1_default"
        android:scaleType="fitCenter"
        android:src="@drawable/water_pucket_right" />

    <TextView
        android:id="@+id/output_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/water"
        android:textColor="@color/my_color"
        android:textSize="@dimen/padding_giga"
        android:textStyle="bold" />

</RelativeLayout>